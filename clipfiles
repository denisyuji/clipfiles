#!/usr/bin/env bash

# Usage: ./clipfiles.sh [<path or pattern>]

# Default to current directory if no argument is provided
if [ "$#" -eq 0 ]; then
  set -- "*"
fi

# Variable to accumulate all output
OUTPUT=""

# Function to check if a file is binary
is_binary() {
  local file="$1"
  [[ "$(file --mime-encoding -b "$file")" != "us-ascii" && "$(file --mime-encoding -b "$file")" != "utf-8" ]]
}

# Expand wildcards
FILES=()
for ARG in "$@"; do
  FILES+=( $ARG )  # Expand and collect files
done

# Process each file
for FILE in "${FILES[@]}"; do
  if [ -f "$FILE" ]; then
    if ! is_binary "$FILE"; then
      OUTPUT+=$'\n'"$FILE"$'\n'
      OUTPUT+='```'$'\n'
      OUTPUT+="$(cat "$FILE")"$'\n'
      OUTPUT+='```'$'\n'
    else
      echo "Skipping binary file: $FILE"
    fi
  else
    echo "Invalid path or no matching files: $FILE"
  fi
done

# Copy to clipboard if OUTPUT is not empty
if [[ -n "$OUTPUT" ]]; then
  echo "$OUTPUT" | xclip -selection clipboard
  echo "Copied to clipboard."
else
  echo "No text files found to copy."
fi
